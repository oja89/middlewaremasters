{

  "manifest_version": 2,
  "name": "middlewaremasters",
  "version": "1.0",

  "description": "Trying to control YT with extension.",
  "permissions": [
    "activeTab",
    "tabs", "<all_urls>",
    "webNavigation"
  ],

  "icons": {
    "48": "icons/red_48.png"
  },

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*", "https://*.vimeo.com/*"],
      "js": ["scripts/listener.js", "scripts/status.js"]
    }
  ],
 
  "browser_action": {
    "default_icon": {
      "16": "icons/red_16.png"
     },
     "default_popup": "popup/popup.html"
   }


}